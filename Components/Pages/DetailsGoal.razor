@page "/goaldetails/{GoalId:int}"
@layout MainLayout
@rendermode InteractiveServer

@using GoalGrower.Data
@using GoalGrower.Models
@using Microsoft.EntityFrameworkCore
@inject NavigationManager Navigation
@inject AppDbContext Db

<PageTitle>Goal Details Page</PageTitle>


@if (goal == null)
{
    <p>Loading goal...</p>
}
else
    {
    <h1>@goal.GoalName Details</h1>

    <div class="details-container">
        <p>Description: @goal.GoalDescription</p>
        <p>Goal Amount: $@goal.GoalAmount.ToString("F2")</p>
        <p>Complete By Date: @goal.CompletionDate.ToShortDateString()</p>
    </div>
    <div class="details-container">
        <div class="detail">
            <p>Description:</p>
            <p>@goal.GoalDescription</p>
        </div>
        <div class="detail">
            <p>Goal Amount:</p>
            <p>$@goal.GoalAmount</p>
        </div>
        <div class="detail">
            <p>Complete By Date:</p>
            <p>@goal.CompletionDate.ToShortDateString()</p>
        </div>
        <div class="detail-remaining-amount">
            <p>Just $@CalculateRemainingAmount().ToString("F2") more to reach your goal!</p>
        </div>
        <div class="icon-container">
            <a class="edit-goal-icon" href="/editgoal/@GoalId">
                <img src="/images/edit-icon.png" alt="edit icon" class="icon" />
            </a>
            <a class="delete-goal-icon" href="/deletegoal/@GoalId">
                <img src="/images/delete-icon.png" alt="delete icon" class="icon" />
            </a>
        </div>
    </div>
    <div class="details-container">
        <h2>Transactions</h2>
        <a class="add-goal-btn" href="/addtransaction/@GoalId">Add Transaction</a>
        <div class="transactions-container">
            @if (transactions != null && transactions.Any())
            {
                <ul>
                    @foreach (var t in transactions)
                    {
                        <li>@t.TransactionDate.ToShortDateString() | @t.TransactionType | @t.TransactionAmount
                            <a class="edit-transaction-icon" href="/edittransaction/@t.TransactionId">
                                <img src="/images/edit-icon.png" alt="edit icon" class="icon" />
                            </a>
                            <a class="delete-transaction-icon" href="/deletetransaction/@t.TransactionId">
                                <img src="/images/delete-icon.png" alt="delete icon" class="icon" />
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Nothing here yet!</p>
            }
        </div>
    </div>
    


    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p style="color:red">@errorMessage</p>
    }
}

@code {
    [Parameter]
    public int GoalId { get; set; }

    private GoalModel? goal;
    private List<TransactionModel> transactions = new List<TransactionModel>();
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            goal = await Db.Goals
                .Where(g => g.GoalId == GoalId)
                .FirstOrDefaultAsync();

            if (goal == null)
            {
                errorMessage = "Goal not found.";
                return;
            }

            transactions = await Db.Transactions
                .Where(t => t.GoalId == GoalId)
                .OrderByDescending(t => t.TransactionDate)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading goal details: {ex.Message}";
        }
    }
    private decimal CalculateRemainingAmount()
    {
        if (goal == null) return 0;

        decimal totalDeposits = transactions
            .Where(t => t.TransactionType == TransactionModel.TransactionTypeEnum.Deposit)
            .Sum(t => t.TransactionAmount);

        decimal totalWithdrawals = transactions
            .Where(t => t.TransactionType == TransactionModel.TransactionTypeEnum.Withdrawal)
            .Sum(t => t.TransactionAmount);

        decimal currentSaved = totalDeposits - totalWithdrawals;

        decimal remaining = goal.GoalAmount - currentSaved;

        return remaining < 0 ? 0 : remaining; // never show negative remaining
    }

}