@page "/goaldetails/{GoalId:int}"
@layout MainLayout

@using GoalGrower.Data
@using GoalGrower.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore

@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<UserModel> UserManager
@inject AppDbContext Db
@inject NavigationManager Nav

<PageTitle>Goal Grower - Goal Details</PageTitle>

@if (goal == null)
{
    <p>@errorMessage ?? "Loading goal..."</p>
}
else
{
    <h1>Goal Details</h1>
    <h2>@goal.GoalName</h2>

    <div class="details-container">
        <div class="detail">
            <p>Description:</p>
            <p>@goal.GoalDescription</p>
        </div>

        <div class="detail">
            <p>Goal Amount:</p>
            <p>@($"{@goal.GoalAmount:C}")</p>
        </div>

        <div class="detail">
            <p>Amount Saved:</p>
            <p>@($"{goal.Transactions.Sum(t => t.TransactionAmount):C}")</p>
        </div>

        <div class="detail">
            <p>Complete By Date:</p>
            <p>@goal.CompletionDate.ToShortDateString()</p>
        </div>

        <div class="icon-container">
            <a class="edit-goal-icon" href="/editgoal/@GoalId">
                <img src="/images/edit-icon.png" alt="edit icon" class="icon" />
            </a>
            <a class="delete-goal-icon" href="/deletegoal/@GoalId">
                <img src="/images/delete-icon.png" alt="delete icon" class="icon" />
            </a>
        </div>
    </div>

    <h2>Transactions</h2>
    <a class="a-btn" href="/addtransaction/@GoalId">Add Transaction</a>

    @if (transactions.Any())
    {
        <div class="transaction-cards">
            @foreach (var t in transactions)
            {
                <div class="transaction-card"
                    style="display:flex; justify-content:space-between; align-items:center; cursor:pointer">
                    <!-- Clickable transaction details -->
                    <a class="transaction-info" href="/transactiondetails/@t.TransactionId"
                        style="flex:1; text-decoration:none; color:inherit; display:flex; gap:1rem;">
                        <span class="date">@t.TransactionDate.ToShortDateString()</span>
                        <span class="type">@t.TransactionType</span>
                        <span class="amount">@t.TransactionAmount.ToString("C")</span>
                    </a>

                    <!-- Edit/Delete icons -->
                    <span class="actions" style="display:flex; gap:0.5rem;">
                        <a href="/edittransaction/@t.TransactionId">
                            <img src="/images/edit-icon.png" class="icon sm-icon" />
                        </a>
                        <a href="/deletetransaction/@t.TransactionId">
                            <img src="/images/delete-icon.png" class="icon sm-icon" />
                        </a>
                    </span>
                </div>
            }
        </div>

    }
    else
    {
        <p>Nothing here yet!</p>
    }
}

@code {
    [Parameter]
    public int GoalId { get; set; }

    private GoalModel? goal;
    private List<TransactionModel> transactions = new();
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get signed-in user
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = await UserManager.GetUserAsync(authState.User);

            if (user == null)
            {
                errorMessage = "You must be logged in to view this goal.";
                return;
            }

            // Load the goal with its transactions, only if it belongs to the user
            goal = await Db.Goals
            .Include(g => g.Transactions.OrderByDescending(t => t.TransactionDate))
            .FirstOrDefaultAsync(g => g.GoalId == GoalId && g.UserId == user.Id);

            if (goal == null)
            {
                errorMessage = "Goal not found or you do not have access.";
                return;
            }

            transactions = goal.Transactions.ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading goal details: {ex.Message}";
        }
    }
}